<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/promotion_play_icon_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:clickable="true"
        android:background="?android:selectableItemBackground"
        android:visibility="visible">

        <ImageView
            android:id="@+id/promotion_play_icon_layout_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/promotion_play_icon_layout_app_info"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/promotion_play_icon_layout_icon"
            android:textColor="@color/nav_item_black_text_color"
            android:textSize="12sp"
            android:layout_marginStart="12dp"
            android:text="Bubble Shooter"
            android:layout_toEndOf="@id/promotion_play_icon_layout_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/promotion_play_icon_layout_app_info"
            android:scaleType="fitCenter"
            android:src="@mipmap/ad_black"
            android:layout_toEndOf="@id/promotion_play_icon_layout_app_info"
            android:layout_marginStart="3dp" />

    </RelativeLayout>

</layout>
